<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/rv_user_profile_item_margin"
    android:background="@color/light_grey"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user_profile_avatar"
        android:layout_width="@dimen/user_profile_avatar_min_size"
        android:layout_height="@dimen/user_profile_avatar_min_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_profile_name"
        tools:src="@drawable/ic_github" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_profile_name"
        android:layout_width="0dp"
        tools:text="User profile name"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_profile_name_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_profile_avatar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>